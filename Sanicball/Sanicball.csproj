<Project Sdk="Godot.NET.Sdk/4.2.1">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>CS8785</WarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\+GodotFiles\GodotFiles.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
    <!--Godot file types-->
    <AdditionalFiles Include="**/*.tres"/>
    <AdditionalFiles Include="**/*.tscn"/>
    <AdditionalFiles Include="**/*.gdshader"/>
    <AdditionalFiles Include="**/*.import"/>
    <!--Text file types-->
    <AdditionalFiles Include="**/*.ttf"/>
    <!--Image file types-->
    <AdditionalFiles Include="**/*.png"/>
    <AdditionalFiles Include="**/*.jpg"/>
    <AdditionalFiles Include="**/*.svg"/>
    <AdditionalFiles Include="**/*.xcf"/>
    <!--Sound file types-->
    <AdditionalFiles Include="**/*.ogg"/>
    <AdditionalFiles Include="**/*.mp3"/>
    <AdditionalFiles Include="**/*.wav"/>
    <!--3D object file types-->
    <AdditionalFiles Include="**/*.blend"/>
    <AdditionalFiles Include="**/*.glb"/>
    <AdditionalFiles Include="**/*.fbx"/>
  </ItemGroup>
</Project>